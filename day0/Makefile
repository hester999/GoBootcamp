# Указываем компилятор
CC=go build

# Указываем каталог для исходного кода
SRCDIR=pkg

# Имя исполняемого файла
BIN=./main

# Цель по умолчанию
all: $(BIN)

# Как строить исполняемый файл
$(BIN): $(SRCDIR)/*.go
	$(CC) -o $@ ./$(SRCDIR)

# Чистка проекта
clean:
	rm -f $(BIN)

# Пометка фиктивных целей
.PHONY: all clean
